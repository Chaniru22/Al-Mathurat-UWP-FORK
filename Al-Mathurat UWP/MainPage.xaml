        </FlipView>
        <Button Content="About" Margin="0,50,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" ToolTipService.ToolTip="View app additional info" RenderTransformOrigin="0.52,0.156">
            <Button.Flyout>
                <Flyout>
                    <StackPanel MaxWidth="400">
                        <ScrollBar/>
                        <my:ProgressBar Width="400" IsIndeterminate="True" ShowPaused="False" ShowError="False" />
                        <TextBlock Style="{ThemeResource BaseTextBlockStyle}" FontSize="20" Text="No updates available." Margin="0,0,0,12" />
                        <TextBlock Text="We'll continue to check for updates in the background."/>
                        <TextBlock/>
                        <TextBlock Text="Current version: 1.9.3 (Stable)"/>
                        <TextBlock><Run Text="Update server: "/><Hyperlink NavigateUri="https://home.itzbluebxrry.ml"><Run Text="https://itzbluebxrry.ml"/></Hyperlink></TextBlock>
                        <TextBlock/>
                        <Image Source="ms-appx:///assets/info.png" Width="100" Height="100"/>
                        <TextBlock/>
                        <TextBlock TextWrapping="WrapWholeWords" Text="Al-Mathurat UWP is an app programmed in C# based on Universal Windows Platform (UWP)."/>
                        <TextBlock/>
                        <HyperlinkButton NavigateUri="https://docs.microsoft.com/en-us/windows/uwp/get-started/universal-application-platform-guide" Content="What is UWP?"/>
                        <TextBlock/>
                        <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Text="Assets"/>
                        <TextBlock TextWrapping="WrapWholeWords"><Run Text="The Mathurat pages are in PNG, converted from the original PDF files provided by "/><Hyperlink NavigateUri="https://www.islam.gov.my/ms/"><Run Text="JAKIM"/></Hyperlink><Run Text="."/></TextBlock>
                        <TextBlock>Fluent icons and logo assets are provided by <Hyperlink NavigateUri="https://icons8.com">Icons8</Hyperlink>.</TextBlock>
                        <TextBlock/>
                        <TextBlock Style="{ThemeResource BaseTextBlockStyle}">For developers</TextBlock>
                        <TextBlock Text="These options are intended for experienced developers. Some of the options are disabled for security reasons." TextWrapping="WrapWholeWords"/>
                        <TextBlock/>
                        <HyperlinkButton Content="Get source codes (in development)" IsEnabled="False"/>
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>
        <Button Width="100" Content="Feedback?" ToolTipService.ToolTip="Have something to say?" Margin="0,50,125,0" VerticalAlignment="Top" HorizontalAlignment="Right" Height="32">
            <Button.Flyout>
                <Flyout>
                    <StackPanel MaxWidth="400">
                        <TextBlock Style="{ThemeResource BaseTextBlockStyle}" FontSize="20" Text="Have something to say?" Margin="0,0,0,12" />
                        <TextBlock/>
                        <Image Source="ms-appx:///assets/feedback.png" Width="100" Height="100"/>
                        <TextBlock/>
                        <TextBlock TextWrapping="WrapWholeWords" Text="You can submit bug reports or even your thoughts about this app by dropping a word in my mailbox!"/>
                        <TextBlock/>
                        <Button Content="Send a feedback" Click="launchURI_Click"/>
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>

        <Button ToolTipService.ToolTip="Support the developer!" Style="{StaticResource AccentButtonStyle}" Width="144" Content="Show your support" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.5" Click="Button_Click" Height="32">
            <Button.RenderTransform>
                <CompositeTransform SkewX="0" TranslateX="0"/>
            </Button.RenderTransform>
            <Button.Flyout>
                <Flyout>
                    <StackPanel MaxWidth="400">
                        <ScrollBar/>
                        <TextBlock Style="{ThemeResource BaseTextBlockStyle}" FontSize="20" Text="Support the developer" Margin="0,0,0,12" />
                        <Image Source="ms-appx:///assets/heart.png" Height="100" Width="100"/>
                        <TextBlock/>
                        <TextBlock TextWrapping="WrapWholeWords" Text="Al-Mathurat UWP's development requires lot of times and efforts. And I don't make money from them. If you like this app, consider supporting me by subscribing my channel on YouTube."/>
                        <TextBlock/>
                        <HyperlinkButton NavigateUri="https://youtube.com/c/ItzBluebxrry?sub_confirmation=1" Content="Subscribe on YouTube"/>
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>

        <my:InfoBar Margin="0, 92, 0, 0"
    Background="{ThemeResource AppBarBackgroundThemeBrush}"
    IsOpen="True"
    Severity="Informational"
    Title="App is aligned wrong?"
    Message="Maximize this window to ensure the app is aligned correctly." Height="44" VerticalAlignment="Top"></my:InfoBar>


        <my:InfoBar Margin="0, 92, 0, 0"
    IsOpen="True"
    Severity="Warning"
    Title="Experimental App"
    Message="You might encounter stability issues while using this app." Height="44" VerticalAlignment="Top">
        </my:InfoBar>
        <TextBlock ToolTipService.ToolTip="Al-Mathurat UWP 1.9.3" Style="{ThemeResource BaseTextBlockStyle}" Text="Al-Mathurat" FontSize="30" Margin="30,27,0,0" Height="44" VerticalAlignment="Top" HorizontalAlignment="Left" Width="209"/>
        

    </Grid>
</Page>